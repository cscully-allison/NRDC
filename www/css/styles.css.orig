/*Disables Ugly Scroll Bar Globallly*/
::-webkit-scrollbar,
*::-webkit-scrollbar {
  display: none;
}

/*
    make a css arrow
    -- adapted from stack overflow-- 
*/
.arrow-down{
    border-right: 10px solid; 
    border-bottom: 10px solid;
    width: 30px; 
    height: 30px;    
    transform: rotate(45deg);
}

.arrow-up{
    border-right: 10px solid; 
    border-bottom: 10px solid;
    width: 30px; 
    height: 30px;    
    transform: rotate(-135deg);    
}

